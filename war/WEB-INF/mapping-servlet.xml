<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- the application context definition for the mapping DispatcherServlet -->

  <bean name="WebServer" class="org.mortbay.jetty.Server" init-method="start"/>

  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <value>
        /=mappingController
        /mapping*=mappingController
        /smd*=smdController
        /json-schema*=jsonSchemaController
        /proxy*=proxyController
      </value>
    </property>
  </bean>

  <bean id="mappingController" class="soapproxy.web.MappingController"></bean>

  <bean id="smdController" class="soapproxy.web.SmdController"></bean>

  <bean id="jsonSchemaController" class="soapproxy.web.JsonSchemaController"></bean>

  <bean id="proxyController" class="soapproxy.web.ProxyController"></bean>

</beans>	